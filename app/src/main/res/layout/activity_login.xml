<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/white"
        android:padding="70dp"
        android:src="@drawable/logo">

    </ImageView>
    <TextView
        android:layout_marginTop="245dp"
        android:layout_width="match_parent"
        android:text="Welcome to Edible,"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_height="25dp"/>

    <TextView
        android:layout_marginTop="270dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="Login to your account"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_height="25dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:background="@color/Teal">

    </ImageView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/m_email"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_below="@+id/logo"
        app:endIconMode="clear_text"
        app:endIconTint="@color/white"
        app:hintEnabled="false"
        >

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            android:background="@color/transparent"
            android:hint="Enter Email"
            android:textColor="@color/white"
            android:textColorHint="@color/white">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/m_pass"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_below="@id/m_email"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white"

        >

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            android:background="@color/transparent"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/m_pass"
        android:background="@drawable/btn_add"
        android:text="Login"
        android:textSize="20dp"

        >

    </Button>

    <TextView
        android:id="@+id/forget"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_marginLeft="269dp"
        android:layout_below="@id/login"
        android:text="Forgot Password"
        android:textColor="@color/white"
        >

    </TextView>



    <TextView
        android:id="@+id/signup"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_below="@+id/forget"
        android:layout_marginLeft="129dp"
         android:layout_marginTop="30dp"
        android:text="Not Registered? SignUp"
        android:textColor="@color/white"

        >

    </TextView>

    <TextView
        android:id="@+id/admin"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_below="@+id/forget"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="330dp"
        android:layout_marginTop="70dp"
        android:text="Admin"
        android:textColor="@color/Yellow">

    </TextView>


</RelativeLayout>